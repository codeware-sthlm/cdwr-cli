{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@cdwr/libs/utils": ["libs/utils/index.ts"],
      "@cdwr/libs/definitions": ["libs/definitions/index.ts"]
    }
  },
  "include": ["src/**/*"]
}
